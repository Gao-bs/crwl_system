    <select id="selectBySelective" resultMap="BaseResultMap"  parameterType="com.system.entity.pojo.User" >
    select p.* from t_user p
    <where>
    <if test="userName!=null and userName!=''">
     and p.user_name  like CONCAT(CONCAT('%',#{userName}),'%')
    </if>
   <if test="account!=null and account!=''">
     and p.account  like CONCAT(CONCAT('%',#{account}),'%')
    </if>
    </where>
    order  by create_time desc
  </select>
  
    <select id="selecUser" parameterType="com.system.entity.pojo.User" resultMap="BaseResultMap">
       select cu.* from t_user cu where cu.account=#{account} and cu.user_password=#{userPassword} 
     </select>
     
     
      <select id="selecUserByUserName" parameterType="com.system.entity.pojo.User" resultMap="BaseResultMap">
  
